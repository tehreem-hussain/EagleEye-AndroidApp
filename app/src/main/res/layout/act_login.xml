<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
    android:background="@color/color_grey_200">


    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:src="@mipmap/dalda_logo"
            />
        <TextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/logo"
            android:text="@string/app_name_v1"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="26dp"
        android:background="@drawable/shadow_2"
        android:layout_margin="26dp"
        android:layout_alignParentBottom="true">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/et"

            android:id="@+id/etEmail"
            android:inputType="number"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Employee ID"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableStart="@drawable/ic_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Password"
            android:drawablePadding="16dp"
            android:background="@drawable/edittext_round_corner"
            android:drawableStart="@drawable/ic_password"
            android:drawableLeft="@drawable/ic_password" />



        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_corner_button_filled"
            android:text="Login"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:textSize="16sp"

            />



        <TextView
            android:id="@+id/tvAppVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grey_500"
            android:text="App version 2.0"
            android:gravity="center"
            android:textSize="12dp"
            android:padding="5dp"
            />



    </LinearLayout>



</RelativeLayout>
